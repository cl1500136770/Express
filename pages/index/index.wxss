/* pages/index/index.wxss */
@import "/wxSearch/wxSearch.wxss";

/* 基础样式 */

view, scroll-view, swiper, swiper-item, icon, text, progress, button,
checkbox-group, checkbox, form, input, label, picker, radio-group, radio, slider,
switch, action-sheet, action-sheet-item, action-sheet-cancel, modal, toast,
loading, navigator, audio, image, video, map, canvas {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

page {
  height: 100%;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

checkbox-group, radio-group {
  display: block;
}

:before, :after, ::before, ::after {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

.c-minheight {
  min-height: 80px;
}

.c-full {
  width: 100%;
  height: 100%;
}

.c-block {
  display: block;
}

.c-autosize {
  width: auto;
  height: auto;
}

.c-fullwidth {
  width: 100%;
}

.c-fullheight {
  height: 100%;
}

.c-initHide {
  opacity: 0 !important;
}

.c-ellipse {
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/*整体class*/

.i-body {
  height: 93%;
  min-height: 100%;
  width: 100%;
  min-width: 100%;
  background-color: rgb(0, 0, 0);
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
  padding-top: 0px;
}

/*中间view*/

.i-center-view {
  display: flex;
  height: 90%;
  min-height: 90%;
  width: 90%;
  min-width: 90%;
  background-color: rgb(255, 255, 255);
  border-radius: 9px;
  margin-top: 0px;
  background-size: cover;
  background-position-y: 37%;
  text-shadow: rgb(255, 255, 255) 0px 0px 0px;
  filter: blur(0px);
  box-shadow: rgb(163, 163, 163) 0px 0px 0px 0px;
  position: relative;
  background-image: url("http://qty83k.creatby.com/materials/origin/7fdb14217a77c9b4519f3c0b4e6dd764_origin.png");
  padding-left: 19px;
  padding-right: 19px;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  align-self: center;
  padding-bottom: 9px;
}

/*快递时间和到底地点view*/

.i-center-view-item {
  border-width: 3px 3px 1px;
  width: 100%;
  min-width: 100%;
  border-color: rgb(255, 255, 255);
  min-height: initial;
  height: auto;
  padding-top: 2px;
  padding-bottom: 2px;
  border-style: none none dotted;
  display: block;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
}

/*快递时间text*/

.i-center-txt-timer {
  color: #999;
  font-size: 16px;
  margin-bottom: 3px;
  margin-top: 3px;
  font-family: SimSun;
}

/*快递到达地点text*/

.i-center-txt-address {
  font-size: 12px;
  color: #fff;
}

/*中间view的content*/

.i-center-view-centent {
  min-height: 63%;
  height: 63%;
  overflow: scroll;
}

/*搜索view*/

.i-search-view {
  height: 6%;
  min-height: 6%;
  width: 90%;
  min-width: 90%;
  margin-bottom: 13px;
  background-color: rgb(255, 255, 255);
  border-radius: 6px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 3%;
  padding-right: 3%;
}

/*搜索input*/

.i-search-input {
  width: 70%;
  min-width: 70%;
}

/*搜索view中的图标*/

.i-img {
  width: 9%;
  min-width: 9%;
  height: 100%;
  min-height: 100%;
  padding-right: 0px;
  padding-left: 0px;
  margin-right: 0px;
}

/*快递所属公司*/

.i-center-txt-company {
  color: rgb(186, 186, 186);
  font-family: SimSun;
  font-size: 14px;
  text-align: right;
  font-weight: 100;
  align-self: flex-end;
  margin-top: 9px;
}
