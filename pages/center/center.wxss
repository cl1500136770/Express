.c-load-view {
  min-height: 118px;
  border-radius: 9px;
  display: flex;
  margin-bottom: 19px;
  background-color: rgb(255, 255, 255);
  background-image: linear-gradient(19deg, rgb(255, 255, 255) 0%, rgb(0, 0, 0) 100%);
  height: 118px;
  flex-direction: column;
  justify-content: flex-end;
  padding: 19px;
  padding-top: 19px;
}

.c-txt_send {
  font-weight: 900;
  color: #000;
}

.c-txt_load {
  color: rgb(0, 0, 0);
  font-weight: 900;
}
